                </LinearLayout>


                -

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="35"
                    android:background="@color/content_background"
                    android:clickable="true"
                    android:orientation="vertical"
                    android:padding="@dimen/content_padding"
                    android:weightSum="35">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="20"
                        android:orientation="horizontal"
                        android:weightSum="100">


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="30"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/img03User"
                                android:layout_width="@dimen/circular_image_width"
                                android:layout_height="@dimen/circular_image_height"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:src="@drawable/placeholder_image" />

                        </LinearLayout>


                        -

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="40"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:weightSum="100">

                            <TextView
                                android:id="@+id/txt03UserName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:gravity="bottom"
                                android:text="User"
                                android:textSize="16sp" />

                            <RatingBar
                                android:id="@+id/rat03UserRating"
                                style="?attr/ratingBarStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top"
                                android:isIndicator="true"
                                android:numStars="5" />

                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="16dp"
                            android:layout_marginTop="16dp"
                            android:alpha=".20"
                            android:background="@color/black_text_color" />


                        -

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="30"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/img03Call"
                                android:layout_width="@dimen/circular_call_image_width"
                                android:layout_height="@dimen/circular_call_image_height"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:alpha=".57"
                                android:src="@drawable/callbutton" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="CALL"
                                android:textColor="@color/black_text_color"
                                android:textSize="14sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/lblDistanceTravelled"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Distance Travelled :"
                            android:gravity="center"
                            android:visibility="gone"
                            android:textColor="@color/black_text_color"
                            android:textSize="14sp" />

                        <Button
                            android:id="@+id/btn_cancel_ride"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/button_height"
                            android:layout_marginTop="@dimen/button_margin"
                            android:layout_marginLeft="@dimen/button_margin"
                            android:layout_marginRight="@dimen/button_margin"
                            android:background="@drawable/cancel_button_bg"
                            android:padding="@dimen/button_padding"
                            android:text="@string/cancel_ride"
                            android:textColor="@color/black_text_color" />


                        <Button
                            android:id="@+id/btn_01_status"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/button_height"
                            android:layout_marginTop="@dimen/button_margin"
                            android:layout_marginLeft="@dimen/button_margin"
                            android:layout_marginRight="@dimen/button_margin"
                            android:background="@drawable/button_corner_black"
                            android:padding="@dimen/button_padding"
                            android:text="@string/tap_when_arrived"
                            android:textColor="@color/button_text_color" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Content frame 4: payment -->

        <LinearLayout
