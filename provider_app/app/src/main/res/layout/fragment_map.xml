                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="bottom"
                            android:layout_weight="50"
                            android:gravity="bottom"
                            android:text="User"
                            android:textSize="@dimen/text_size_medium" />

                        <RatingBar
