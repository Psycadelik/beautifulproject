                <Button
                    android:id="@+id/btn_rate_submit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"
                    android:layout_margin="@dimen/button_margin"
                    android:background="@drawable/button_corner_black"
                    android:padding="@dimen/button_padding"
                    android:text="@string/rate_user"
                    android:textColor="@color/button_text_color" />

            </LinearLayout>

        </LinearLayout>

        <!-- Button Frame 1: single button -->
            <LinearLayout
                android:id="@+id/lnrGoOffline"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:visibility="gone"
                android:orientation="vertical">



                <Button
                    android:id="@+id/btn_go_offline"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"
                    android:layout_margin="@dimen/button_margin"
                    android:background="@drawable/button_corner_black"
                    android:padding="@dimen/button_padding"
                    android:text="@string/go_offline"
                    android:textColor="@color/button_text_color" />


            </LinearLayout>


        <LinearLayout
            android:id="@+id/lnrErrorLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/button_text_color"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <pl.droidsonroids.gif.GifImageView
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="@dimen/_150sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/sad" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:gravity="center"
                    android:lineSpacingMultiplier="1.3"
                    android:text="Server is temporarily unavailable.! Please check later."
                    android:textSize="@dimen/_15sdp" />


            </LinearLayout>
        </LinearLayout>


    </FrameLayout>

</LinearLayout>